<div class="row justify-content-center">
  <div class="col col-md-6">
    <center>
      <h1> <%= t('.contact') %> </h1>
    </center>
    <div class="card border-primary">
      <div class="card-body">
        <%= form_with local: true do |form| %>
          <div class="form-group">
            <p>
              <%= form.text_area :message, class: "form-control", placeholder: t('.message'), size: "70x5", required: true %>
            </p>
            <%= form.submit t('.send'), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <br>
    <% if current_user.is_a?(Admin) %>
      <%= link_to t('.back'), admin_tests_path, class: 'btn btn-primary' %>
    <% else %>
      <%= link_to t('.back'), tests_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
